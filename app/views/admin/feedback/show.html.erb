<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Feedback Details</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Subject:</strong> <%= @feedback.subject %>
          </div>
          <div class="mb-3">
            <strong>Feedback:</strong> <%= @feedback.feedback %>
          </div>
          <div class="mb-3">
            <strong>Sender:</strong> <%= @feedback.user.email %>
          </div>
          <div class="mb-3">
            <strong>Date:</strong> <%= @feedback.created_at.strftime("%B %d, %Y") %>
          </div>
          <div class="mb-3">
            <strong>Time:</strong> <%= @feedback.created_at.strftime("%I:%M %p") %>
          </div>
          <%= link_to "Back", admin_feedback_index_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
