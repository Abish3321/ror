<% if @users.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>S.No.</th>
        <th>Name</th>
        <th>Email</th>
        <th>Contact Number</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.contact_number %></td>
          <td>
            <% if current_admin %>
              <%= link_to "Delete", admin_user_path(user.id), method: :delete, data: { confirm: "Are you sure you want to delete #{user.name}?" }, class: "btn btn-danger btn-sm", remote: true %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No users found.</p>
<% end %>
