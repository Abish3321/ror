<div class="container bg-purple">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <%= form_with(url: admin_authenticate_path, method: :post, class: 'p-5 shadow-sm border rounded-3') do |form| %>
        <h2 class="text-center mb-4 text-primary">Login Form</h2>
        <div class="mb-3">
          <%= form.label :username , class: 'form-label' %>
          <%= form.text_field :username, class: 'form-control border border-primary', id: 'exampleInputEmail1', required: true %>
        </div>
        <div class="mb-3">
          <%= form.label :password, class: 'form-label' %>
          <%= form.password_field :password, class: 'form-control border border-primary', id: 'exampleInputPassword1', required: true %>
        </div>
        <div class="d-grid">
          <%= form.submit 'Login', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
