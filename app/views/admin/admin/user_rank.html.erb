<h1>User Rank</h1>
<table class="table">
  <thead>
    <tr>
      <th>Rank</th>
      <th>User Name</th>
      <th>Email</th>
      <th>Score</th>
    </tr>
  </thead>
  <tbody>
    <% @users_rank.each_with_index do |user, index| %> 
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tests.sum(:score) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
