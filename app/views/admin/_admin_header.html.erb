<% if current_admin %>
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <div class="container-fluid">
      <%= link_to 'Admin Panel', admin_dashboard_path, class: "navbar-brand text-white" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-between" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Home', admin_dashboard_path, class: "nav-link active-bright text-white", aria: { current: "page" } %>
          </li>
          <li class="nav-item">
            <%= link_to 'Users', admin_users_path, class: "nav-link text-white" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Rank', admin_user_rank_path, class: "nav-link text-white" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Questions
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <li><%= link_to 'Add Question', new_admin_question_path, class: "dropdown-item" %></li>
              <li><%= link_to 'Edit Questions', admin_questions_path, class: "dropdown-item" %></li>
            </ul>
          </li>
          <li class="nav-item">
            <%= link_to 'Feedback', admin_feedback_index_path, class: "nav-link text-white" %>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto"> <!-- Align to the right -->
          <li class="nav-item">
            <%= link_to "User: #{current_admin.username}", '#', class: 'nav-link text-white' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Out', admin_logout_path, method: :get, class: 'nav-link text-white' %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<% else %>
  <!-- Normal Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <div class="container-fluid">
      <%= link_to 'Admin Login', root_path, class: "navbar-brand text-white" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>
<% end %>
