<h3>Questions</h3>
<div class="container-fluid" style="margin-bottom:70px;">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Question</th>
        <th>Actions</th>
      </tr>
    </thead>
    <!-- Table body -->
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.id %></td>
          <td><%= question.text %></td>
          <td>
            <%= link_to "Edit", edit_admin_question_path(question), class: "btn btn-primary btn-sm" %>
            <%= button_to "Delete", admin_question_path(question), method: :delete, data: { confirm: "Are you sure you want to delete this question?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
