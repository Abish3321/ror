<!-- app/views/home/test_score.html.erb -->
<div class="container mt-5">
 
  <div class="row">
    <div class="col-md-6">
      <h3>User Details</h3>
      <p><strong>Name:</strong> <%= @user.name %></p>
      <p><strong>Email:</strong> <%= @user.email %></p>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-6">
      <h3>Test Results</h3>
      <p><strong>Total Questions:</strong> <%= 10 %></p>
      <p><strong>Correct Answers:</strong> <%= @test.score %></p>
      <p><strong>Incorrect Answers:</strong> <%= 10 - @test.score %></p>
    </div>
  </div>
</div>
