<%= form_with(model: user || User.new, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :contact_number %>
    <%= form.text_field :contact_number, class: 'form-control', required: true %>
  </div>

  <div class="d-flex justify-content-between">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '#', class: 'btn btn-secondary', 'data-bs-dismiss' => 'modal' %>
  </div>
<% end %>
